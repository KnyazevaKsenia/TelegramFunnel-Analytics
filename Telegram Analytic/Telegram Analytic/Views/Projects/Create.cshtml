@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Telegram_Analytic.Models.ProjectModels.CreateProjectModel

@{
    ViewData["Title"] = "Создание проекта";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" id="createProjectForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Название проекта *</label>
                        <input asp-for="Name" class="form-control form-control-lg" 
                               placeholder="Введите название проекта" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TelegramBotToken" class="form-label fw-bold">Токен бота Telegram</label>
                                <input asp-for="TelegramBotToken" class="form-control" 
                                       placeholder="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz" />
                                <span asp-validation-for="TelegramBotToken" class="text-danger small"></span>
                                <div class="form-text">
                                    <small>Токен можно получить у <a href="https://t.me/BotFather" target="_blank" class="text-decoration-none">@@BotFather</a> в Telegram</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TelegramChatId" class="form-label fw-bold">ID канала Telegram</label>
                                <input asp-for="TelegramChatId" class="form-control" 
                                       placeholder="-1001234567890" />
                                <span asp-validation-for="TelegramChatId" class="text-danger small"></span>
                                <div class="form-text">
                                    <small>ID канала в формате -1001234567890</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info mt-4">
                        <h6 class="alert-heading">💡 Подсказка</h6>
                        <p class="mb-2">Токен бота и ID канала можно добавить позже в настройках проекта.</p>
                        <p class="mb-0">После создания проекта вы сможете генерировать tracking-ссылки для отслеживания переходов.</p>
                    </div>

                    <div class="form-group mt-4">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Назад к списку
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus"></i> Создать проект
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Модальное окно с инструкцией -->
<div class="modal fade" id="instructionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Как получить данные для Telegram?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Получение токена бота:</h6>
                        <ol class="small">
                            <li>Найдите <a href="https://t.me/BotFather" target="_blank">@@BotFather</a> в Telegram</li>
                            <li>Отправьте команду <code>/newbot</code></li>
                            <li>Укажите имя и username для бота</li>
                            <li>Скопируйте полученный токен</li>
                        </ol>
                    </div>
                    <div class="col-md-6">
                        <h6>Получение ID канала:</h6>
                        <ol class="small">
                            <li>Создайте канал в Telegram</li>
                            <li>Добавьте своего бота в канал как администратора</li>
                            <li>Отправьте любое сообщение в канал</li>
                            <li>Перейдите по ссылке: <code>https://api.telegram.org/bot[ВАШ_ТОКЕН]/getUpdates</code></li>
                            <li>Найдите <code>"chat":{"id":-1001234567890}</code></li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Показ модального окна при клике на ссылку BotFather
            $('a[href*="BotFather"]').on('click', function(e) {
                e.preventDefault();
                $('#instructionModal').modal('show');
            });

            // Подсказка для поля токена
            $('#TelegramBotToken').on('focus', function() {
                $(this).attr('placeholder', 'Пример: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz');
            });

            // Подсказка для поля ID канала
            $('#TelegramChatId').on('focus', function() {
                $(this).attr('placeholder', 'Пример: -1001234567890');
            });

            // Валидация формы
            $('#createProjectForm').on('submit', function() {
                const submitBtn = $(this).find('button[type="submit"]');
                submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Создание...');
            });
        });
    </script>

    <style>
        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        
        .card {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-bottom: none;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            transform: translateY(-1px);
            transition: all 0.3s ease;
        }
    </style>
}