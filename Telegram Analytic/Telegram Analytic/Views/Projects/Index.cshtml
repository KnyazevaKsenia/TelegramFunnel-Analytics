@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Project>

@{
    ViewData["Title"] = "Мои проекты";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Создать новый проект</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>У вас пока нет проектов</h4>
        <p>Создайте первый проект чтобы начать отслеживать статистику переходов по ссылкам.</p>
        <a asp-action="Create" class="btn btn-primary">Создать проект</a>
    </div>
}
else
{
    <div class="row">
        @foreach (var project in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@project.Name</h5>
                        <span class="badge @(project.IsActive ? "badge-success" : "badge-secondary")">
                            @(project.IsActive ? "Активен" : "Неактивен")
                        </span>
                    </div>
                    <div class="card-body">
                        <p><strong>ID канала:</strong> @(project.TelegramChatId ?? "Не указан")</p>
                        <p><strong>Создан:</strong> @project.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                        
                        <div class="btn-group">
                            <a asp-controller="Project"
                               asp-action="Index"
                               asp-route-projectId="@project.Id"
                               class="btn btn-info btn-sm">
                                Подробности
                            </a>
                            <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-primary btn-sm">Редактировать</a>
                            <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger btn-sm">Удалить</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
