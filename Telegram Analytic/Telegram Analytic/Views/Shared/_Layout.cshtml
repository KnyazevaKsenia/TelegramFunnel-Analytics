@{
    var appName = "TelegramFunnel Analytics (TFA)";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Roboto, sans-serif;
            
        }
        header {
            background: linear-gradient(90deg, #007bff, #00aaff);
            
        }
        .my-5{
            margin-top: 5rem !important;;
            }
        .navbar-brand {
            font-weight: 600;
            color: #fff !important;
        }
        .hero {
            
            background: linear-gradient(135deg, #007bff, #00aaff);
            color: white;
            padding: 5rem 2rem;
            text-align: center;
            border-radius: 2rem 2rem 2rem 2rem;
        }
        .hero h1 {
            font-size: 2.5rem;
            font-weight: 700;
        }
        .hero p {
            font-size: 1.2rem;
            margin-top: 1rem;
            opacity: 0.9;
        }
        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
        }
        footer {
            text-align: center;
            padding: 2rem;
            color: #777;
            font-size: 0.9rem;
        }
        main
        {
            margin-top:  50px;
        }
    </style>
</head>
<body>
    <header class="fixed-top shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">@appName</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/logout">
                                <i class="bi bi-box-arrow-right"></i> Выйти
                            </a>
                        </li>
                        }
                        else
                        {
                        <li class="nav-item">
                            <a class="nav-link" href="/account/login">
                                <i class="bi bi-box-arrow-in-right"></i> Вход
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/account/register">
                                <i class="bi bi-person-plus"></i> Регистрация
                            </a>
                        </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>


<main class="container my-5">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year TelegramFunnel Analytics — система сквозной аналитики Telegram-каналов
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

